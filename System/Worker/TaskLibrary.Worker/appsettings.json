{
  "AllowedHosts": "*",

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "Microsoft.Hosting.Lifetime": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3} ({CorrelationId})] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3} ({CorrelationId})] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },

  "ConnectionStrings": {
    "MainDbContext": "Server={CONNECTION_STRING_HOST};Initial Catalog={CONNECTION_STRING_DATABASE};Persist Security Info=False;User ID={CONNECTION_STRING_USER};Password={CONNECTION_STRING_PASSWORD};"
  },

  "Email": {
    "FromName": "{Email_FromName}",
    "FromEmail": "{Email_FromEmail}",
    "Server": "{Email_Smtp_Server}",
    "Port": "{Email_Smtp_Port}",
    "Login": "{Email_Smtp_Login}",
    "Password": "{Email_Smtp_Password}",
    "Ssl": "{Email_Smtp_Ssl}"
  },

  "RabbitMQ": {
    "Uri": "{RABBITMQ_URI}",
    "Username": "{RABBITMQ_USERNAME}",
    "Password": "{RABBITMQ_PASSWORD}"
  }
}
